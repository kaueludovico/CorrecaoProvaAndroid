<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailsFragment">


    <TextView
        android:id="@+id/titleRecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="Tela de Detalhes da Receita"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredientsRecipe"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="76dp"
        android:text="Ingredientes"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/titleRecipe"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/titleRecipe"
        app:layout_constraintTop_toBottomOf="@+id/titleRecipe" />

    <TextView
        android:id="@+id/preparationRecipe"
        android:layout_width="173dp"
        android:layout_height="32dp"
        android:layout_marginTop="100dp"
        android:text="Modo de preparo"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ingredientsRecipe"
        app:layout_constraintStart_toStartOf="@+id/ingredientsRecipe"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsRecipe" />


</androidx.constraintlayout.widget.ConstraintLayout>